{
	"name": "@mscharley/bootstrap-node",
	"version": "1.0.4",
	"description": "Bootstrap an opinionated node project quickly.",
	"bin": {
		"bootstrap": "dist/bin/bootstrap.js"
	},
	"scripts": {
		"build": "tsc",
		"precommit": "lint-staged",
		"check-updates": "npm-check-updates 2>&1",
		"test": "rushx test:jest",
		"test:lint": "eslint --ext .js,.jsx,.ts,.tsx .",
		"test:jest": "jest 2>&1"
	},
	"lint-staged": {
		"*.{js,jsx,ts,tsx}": "eslint --fix",
		"*.json": "prettier -w"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/mscharley/node-presets.git"
	},
	"keywords": [
		"node"
	],
	"author": "Matthew Scharley <matt@scharley.me>",
	"funding": {
		"type": "individual",
		"url": "https://github.com/sponsors/mscharley"
	},
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/mscharley/node-presets/issues"
	},
	"homepage": "https://github.com/mscharley/node-presets#readme",
	"devDependencies": {
		"@babel/core": "~7.22.5",
		"@babel/preset-env": "~7.22.5",
		"@babel/preset-typescript": "~7.22.5",
		"@typescript-eslint/parser": "^5.60.1",
		"@typescript-eslint/eslint-plugin": "^5.60.1",
		"@mscharley/eslint-config": "workspace:*",
		"@mscharley/prettier-config": "workspace:*",
		"@types/jest": "~29.5.2",
		"@types/node": "~20.3.3",
		"babel-jest": "~29.5.0",
		"bufferutil": "~4.0.7",
		"canvas": "~2.11.2",
		"eslint": "^8.44.0",
		"eslint-config-prettier": "^8.8.0",
		"eslint-plugin-deprecation": "^1.4.1",
		"eslint-plugin-node": "^11.1.0",
		"eslint-plugin-prettier": "^4.2.1",
		"lint-staged": "~13.2.3",
		"jest": "~29.5.0",
		"prettier": "^2.8.8",
		"typescript": "~5.1.6",
		"utf-8-validate": "~6.0.3",
		"npm-check-updates": "~16.10.13"
	}
}
